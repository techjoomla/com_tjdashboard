<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_TJDASHBOARD_FILTER_SEARCH_LABEL"
			description="COM_TJDASHBOARD_DASHBOARDS_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="state"
			type="status"
			label="COM_TJDASHBOARD_FILTER_PUBLISHED"
			description="COM_TJDASHBOARD_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<input type="hidden" name="form_submited" value="1"/>
	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			label="COM_TJDASHBOARD_LIST_LIMIT"
			description="COM_TJDASHBOARD_LIST_LIMIT_DESC"
			class="input-mini"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
